{
	"name": "@searchspring/eslint-config",
	"description": "Our style",
	"version": "1.0.5",
	"author": "Eric Hacke",
	"bugs": {
		"url": "https://github.com/searchspring/eslint-config/issues"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"dependencies": {
		"eslint-config-airbnb-base": "^14.1.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-compat": "^3.7.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-filenames": "^1.3.2",
		"eslint-plugin-import": "^2.21.1",
		"eslint-plugin-jest": "^24.1.0",
		"eslint-plugin-jsx-a11y": "^6.2.1",
		"eslint-plugin-mocha": "^8.0.0",
		"eslint-plugin-no-secrets": "^0.6.8",
		"eslint-plugin-optimize-regex": "^1.2.0",
		"eslint-plugin-prettier": "^3.1.3",
		"eslint-plugin-promise": "^4.1.1",
		"eslint-plugin-react": "^7.20.0",
		"eslint-plugin-simple-import-sort": "^5.0.3",
		"eslint-plugin-sonarjs": "^0.5.0",
		"eslint-plugin-sort-keys-fix": "^1.1.1",
		"eslint-plugin-unicorn": "^22.0.0"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^11.0.0",
		"@searchspring/prettier": "^1.0.2",
		"commitizen": "^4.1.2",
		"commitlint": "^11.0.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.2.0",
		"fixpack": "^3.0.6",
		"husky": "^4.2.5",
		"lint-staged": "^10.4.1",
		"prettier": "^2.0.5",
		"standard-version": "^9.0.0"
	},
	"files": [
		"*.js",
		"!scratch.*"
	],
	"homepage": "https://github.com/searchspring/eslint-config#readme",
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "lint-staged"
		}
	},
	"keywords": [
		"eslint",
		"lint",
		"searchspring"
	],
	"license": "MIT",
	"lint-staged": {
		"./package.json": [
			"fixpack",
			"prettier --write"
		],
		"*.{js,ts}": [
			"prettier --write",
			"eslint --fix"
		]
	},
	"main": "index.js",
	"peerDependencies": {
		"eslint": "^6.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/searchspring/eslint-config.git"
	},
	"scripts": {
		"beta": "npm version prerelease && npm publish",
		"commit": "cz",
		"format": "prettier --write \"**/*.{js,ts,json}\"",
		"lint": "fixpack && npm run format && eslint --fix \"**/*.{js,ts}\"",
		"major": "npm version major && npm publish",
		"minor": "npm version minor && npm publish",
		"patch": "npm version patch && npm publish",
		"postpublish": "git push",
		"prepare": "fixpack && npm run format",
		"preversion": "npm run lint",
		"test": "echo \"Error: no test specified\" && exit 1"
	}
}
